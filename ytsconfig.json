{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "incremental": true,
    "paths": {
      "@helpers": ["src/helpers"],
      "@src": ["src"]
    }
  },
  "exclude": ["node_modules", "test", "build", "**/*spec.ts"]
}
